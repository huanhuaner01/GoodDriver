<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fffbfaf9"
    android:orientation="vertical" >

    <include layout="@layout/header_cancel"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fffbfaf9" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#fff0f0f0"
            android:orientation="vertical"
            android:padding="@dimen/activity_horizontal_margin"
             >

            <EditText
                android:id="@+id/user_update_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/inputerea_bg"
                android:ems="10"
                android:gravity="top"
                android:inputType="textMultiLine"
                android:padding="5dp"
                android:singleLine="false"
                android:textSize="18sp"
                android:focusable="true"
                android:maxLength="100"
                 >
            </EditText>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center_vertical" >

                <Button
                    android:id="@+id/user_update_ok"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/login_input_height"
                    android:background="@drawable/login_bt_edge"
                    android:text="退出登录"
                    android:textColor="@color/white"
                    android:textSize="16sp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>