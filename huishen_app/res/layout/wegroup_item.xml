<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >
    
    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/wegroup_item_bg"
    android:layout_margin="@dimen/wegroup_item_margin"
        >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/wegroup_item_padding"
    android:orientation="horizontal"
    >
    <ImageView
        android:id="@+id/wegroup_item_ic"
        android:layout_height="@dimen/wegroup_item_imageView_height"
        android:layout_width="@dimen/wegroup_item_imageView_width"
        android:background="@drawable/wegroup_vip"
       />
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1.7"
        android:orientation="vertical"
        android:padding="@dimen/wegroup_item_class_padding"
        >
     <TextView
         android:id="@+id/wegroup_item_class"
         style="@style/WeGroupClass"
         android:text="vip班"
         android:textSize="@dimen/wegroup_item_class_tv_size"
         />
          <TextView
         android:id="@+id/wegroup_item_des"
         style="@style/WeGroupClass"
         android:gravity="center"
         android:text="时间短   服务好"
         android:textSize="@dimen/wegroup_item_des_tv_size"
         />
          </LinearLayout>
          
    
          <LinearLayout
              android:layout_width="0dp"
              android:layout_height="match_parent"
              android:layout_weight="1"
              android:orientation="vertical"
              android:layout_marginRight="@dimen/wegroup_item_price_marginRight"
              >
                 <TextView
         android:id="@+id/wegroup_item_price"
         android:layout_height="wrap_content"
         android:layout_width="match_parent"
         android:gravity="center"
         android:padding="@dimen/wegroup_item_price_padding"
         android:text="5999起"
         android:textSize="@dimen/wegroup_item_price_tsize"
         android:textColor="@color/wegroup_item_price_tv_color"
         />
          <TextView
         android:id="@+id/wegroup_item_btn_price"
         android:layout_height="wrap_content"
         android:layout_width="match_parent"
         android:layout_gravity="center"
         android:layout_marginTop="@dimen/wegroup_item_pricebtn_marginTop"
         android:padding="@dimen/wegroup_item_price_padding"
         android:gravity="center"
         android:text="马上团"
         android:textSize="@dimen/wegroup_item_pricebtn_tsize"
         android:textColor="@color/white"
         android:background="@drawable/wegroup_price"
         />
          </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/wegroup_item_line_size"
        android:background="@color/wegroup_item_line_color"
        />
    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/wegroup_item_padding"
    android:orientation="horizontal"
    >
          <View
              android:layout_width="@dimen/wegroup_item_remainingtime_view_size"
              android:layout_height="@dimen/wegroup_item_remainingtime_view_size"
              android:background="@drawable/time_ic"
              android:layout_marginRight="@dimen/wegroup_item_remainingtime_view_marginRgiht"
              />
          <TextView
              android:id="@+id/wegroup_item_remainingtime"
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_weight="2"
              android:text="剩余时间3天20小时15分"
              android:textSize="@dimen/wegroup_item_buttomtv_textsize"
              android:layout_gravity="center_vertical"
              android:textColor="@color/wegroup_item_buttomtv_color"
              />
              <TextView
              android:id="@+id/wegroup_item_numofpeople"
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:text="参团人数28/30人"
              android:layout_gravity="center_vertical"
              android:textSize="@dimen/wegroup_item_buttomtv_textsize"
              android:textColor="@color/wegroup_item_buttomtv_color"
              android:gravity="right"
              />
    </LinearLayout>
    </LinearLayout>
</LinearLayout>