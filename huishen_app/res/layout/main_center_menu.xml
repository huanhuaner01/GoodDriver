                android:layout_height="wrap_content"
                android:background="@drawable/home_menu_djt_selector"
                android:contentDescription="@string/img_desc" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/main_menu_title_pic_split"
                android:gravity="center"
                android:text="@string/main_menu_djt"
                android:textSize="@dimen/main_menu_title_textsize" />
        </LinearLayout>
    </LinearLayout>

