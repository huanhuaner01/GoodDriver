<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/guaguaka_bgcolor"
    android:orientation="vertical" >

    <include layout="@layout/header_withback" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" >

                <View
                    android:id="@+id/gua_header_img"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/guaguaka_header" />
                 <!-- 刮刮卡区域 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:background="@drawable/guaguka_bg"
                    android:orientation="vertical"
                    android:padding="@dimen/guagua_ly_padding" >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/guagua_my" 
                        android:textStyle="bold"
                        android:textColor="@color/red_dark"
                        android:paddingBottom="@dimen/guagua_ly_padding"
                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/guaguaka_bg2"
                        android:padding="15dp" >

                        <com.huishen_app.all.mywidget.GuaGuaKa
                            android:id="@+id/guaguaka_v"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:background="@color/white" />
                    </LinearLayout>
                    
                   <!-- 获奖名单
                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="200dp"
                       android:layout_marginTop="@dimen/guagua_ly_padding"
                       android:orientation="vertical"
                       >
                      <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/guagua_awardlist" 
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:paddingBottom="@dimen/guagua_ly_padding"
                        />
                   </LinearLayout>
                    -->
                </LinearLayout>
            </LinearLayout>

</LinearLayout>