<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/main_title_height"
    android:layout_alignParentTop="true"
    android:background="@color/main_title_background"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/header_city"
            style="@style/login_title_stitle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/all_back_bt_selector"
            android:contentDescription="@string/img_desc"
            android:drawableRight="@drawable/down_arrow_ic"
            android:text="@string/main_city"
            android:layout_alignParentLeft="true" 
            android:maxWidth="100dp"
            android:ellipsize="end"
            android:singleLine="true"
            />

        <TextView
            android:id="@+id/header_title"
            style="@style/login_title_stitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="培训历史"
            android:textSize="18sp"
            android:layout_centerInParent="true" 
            android:ellipsize="end"
            android:singleLine="true"
            android:maxLength="10"
            />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:orientation="vertical" >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/main_tab_splitcolor_fisrt"
            android:contentDescription="@string/img_desc" />

        <ImageView
            android:id="@+id/title_spilt_buttom"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/main_tab_splitcolor_end"
            android:contentDescription="@string/img_desc" />
    </LinearLayout>

</LinearLayout>