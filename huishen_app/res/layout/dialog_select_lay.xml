<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/dialog_margin"
    android:layout_marginBottom="@dimen/dialog_margin"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/dialog_select_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dialog_title_height"
        android:background="@drawable/dialog_title_shape"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:textColor="@color/white"
        android:textSize="18sp" />

    <ListView
        android:id="@+id/dialog_select_listview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:divider="@color/Grey_line"
        android:dividerHeight="@dimen/listview_divider_height"
         >
        
    </ListView>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_vertical_margin"
        android:background="@drawable/dialog_buttom"
        />
</LinearLayout>