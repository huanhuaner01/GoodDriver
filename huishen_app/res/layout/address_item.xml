<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/addr_item_bg_selector"
    android:gravity="center_vertical"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/addr_item_txt"
        android:layout_width="0dp"
        android:layout_height="@dimen/address_item_height"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/address_item_padding_left"
        android:paddingRight="@dimen/address_item_padding_left"
        android:textSize="@dimen/address_item_text_size" />

    <ImageView
        android:id="@+id/addr_item_ok"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/address_item_height"
        android:contentDescription="@null"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/address_item_padding_left"
        android:paddingRight="@dimen/address_item_padding_left"
        android:src="@drawable/addr_all_ok"
        android:visibility="invisible" />

</LinearLayout>