<?xml version="1.0" encoding="UTF-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><shape android:shape="rectangle">
            <stroke android:width="1dp" android:color="@color/calendar_bt_bg_color" />
            <!-- 填充的颜色 -->
            <gradient android:angle="270" android:centerColor="@color/pressed_bg" android:centerX="0.5" android:centerY="0.5" android:endColor="@color/pressed_bg" android:startColor="@color/pressed_bg" />
            <!-- 设置按钮的四个角为弧形 -->
            <!-- android:radius 弧形的半径 -->
            <corners android:radius="5dip" />

            <!-- padding：Button里面的文字与Button边界的间隔 -->
            <padding android:bottom="@dimen/hand_welcome_content_bt_padding_top" android:left="@dimen/hand_welcome_content_bt_padding_left" android:right="@dimen/hand_welcome_content_bt_padding_left" android:top="@dimen/hand_welcome_content_bt_padding_top" />
        </shape></item>
    <item><shape android:shape="rectangle">
            <stroke android:width="1dp" android:color="@color/calendar_bt_bg_color" />
            <!-- 填充的颜色 -->
            <gradient android:angle="270" android:centerColor="#EEF0EF" android:centerX="0.5" android:centerY="0.5" android:endColor="#D5D9D8" android:startColor="#FAFBF9" />
            <!-- 设置按钮的四个角为弧形 -->
            <!-- android:radius 弧形的半径 -->
            <corners android:radius="5dip" />

            <!-- padding：Button里面的文字与Button边界的间隔 -->
            <padding android:bottom="@dimen/hand_welcome_content_bt_padding_top" android:left="@dimen/hand_welcome_content_bt_padding_left" android:right="@dimen/hand_welcome_content_bt_padding_left" android:top="@dimen/hand_welcome_content_bt_padding_top" />
        </shape></item>

</selector>