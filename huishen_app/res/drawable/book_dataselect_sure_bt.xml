<?xml version="1.0" encoding="UTF-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 有先后顺序  即最后的是才是默认的 -->
    <item android:state_pressed="true"><shape>
            <gradient android:angle="90" android:endColor="@color/book_dateselect_sure_bt_end" android:startColor="@color/book_dateselect_sure_bt_begin" />

            <stroke android:width="2dp" android:color="@color/book_dateselect_sure_bt_sp" />

            <corners android:radius="@dimen/button_radius" />
            <!-- padding：Button里面的文字与Button边界的间隔 -->
            <padding android:bottom="10dp" android:left="20dp" android:right="20dp" android:top="10dp" />
        </shape></item>
    <item><shape>
            <gradient android:angle="90" android:endColor="@color/book_dateselect_sure_bt_begin" android:startColor="@color/book_dateselect_sure_bt_end" />

            <stroke android:width="2dp" android:color="@color/book_dateselect_sure_bt_sp" />

            <corners android:radius="@dimen/button_radius" />
            <!-- padding：Button里面的文字与Button边界的间隔 -->
            <padding android:bottom="10dp" android:left="20dp" android:right="20dp" android:top="10dp" />
        </shape></item>

</selector>